<div class="col-xs-3">
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
      <% book.errors.full_messages.each do |msg| %>
        <h3><%= msg %></h3>
      <% end %>
    </div>
  <% end %>

  <h2>User info</h2>


   <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", format: 'jpeg' %>
<table class="table table-striped">
  <tbody>
    <tr>

    <th>name</th>
    <th><%= user.name %></th>

    </tr>
  </tbody>

  <tbody>
    <tr>
  <th>introduction</th>
  <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>


   <%= link_to edit_user_path(user.id) do %>
          <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_6144" >
    </i>
      <% end %>


  <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
        </div>
  <% end %>


     <div class="index-form">
       <%= form_with model:@book, url: books_path, method: :post, local: true do |f| %>

       <h2>New book</h2>

       <h4>Title</h4>
       <%= f.text_field :title %>

       <h4>Opinion</h4>
       <%= f.text_area :body %>

       <div class="actions row">
       <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
       </div>
       <% end %>
     </div>
</div>