<% if @user.errors.any? %>
     <p>入力errorです</p>
    <div id="error_explanation">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
        </div>
  <% end %>


<div class="container">

        <p id="notice"></p>


      	<h2>User info</h2>

<%= form_with model:@user, local:true do |f| %>


  <div class="field">
    <label for="user_name">Name</label>
    <%= f.text_field :name, autofocus: true %>

  </div>

  <div class="actions">
    <label for="user_image">image</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
  </div>

  <div class="field">
    <label for="user_introduction">introduction</label>
    <%= f.text_field :introduction , autofocus: true %>
  </div>


  <%= f.submit "Update User" %>

      </div>

      <% end %>