<% if @book.errors.any? %>
     <p>入力errorです</p>
    <div id="error_explanation">
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
        </div>
  <% end %>


<div class="container">

        <p id="notice"></p>


      	<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1>Editing Book</h1>
  <!-- <div class='col-md-3 col-md-offset-3'>
  </div> -->

	<%= form_with model:@book, local: true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <input type="submit" name="commit" value="Update Book" class="btn btn-primary col-xs-12" data-disable-with="Update Book">
  </div>
</form>
		<%= link_to "Show", book_path(@book.id) %>
		<%= link_to "Back", books_path %>
    </div>
    <div class="col-md-3"></div>
</div>
      </div>


<% end %>