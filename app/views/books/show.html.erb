<div class="row">

  <div class="col-xs-3">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <% @book.errors.full_messages.each do |msg| %>
        <h3><%= msg %></h3>
      <% end %>
    </div>
  <% end %>

  <h2>User info</h2>


   <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
<table class="table table-striped">
  <tbody>
    <tr>

    <th>name</th>
    <th><%= @book.user.name %></th>

    </tr>
  </tbody>

  <tbody>
    <tr>
  <th>introduction</th>
  <th><%= @book.user.introduction %></th>
    </tr>
  </tbody>
</table>


   <%= link_to user_path(current_user) do %>
          <i class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_6144" >
    </i>
      <% end %>


  <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
        </div>
  <% end %>


     <div class="index-form">
       <%= form_with model:@book_new, url: books_path, method: :post, local: true do |f| %>

       <h2>New book</h2>

       <h4>Title</h4>
       <%= f.text_field :title %>

       <h4>Opinion</h4>
       <%= f.text_area :body %>

       <div class="actions row">
       <%= f.submit "Create Book" %>
       </div>
       <% end %>
     </div>
</div>

  <div class="col-xs-9">

<h1>Book detail</h1>

<table class="table table-striped">
 
  <tr>
   <td><%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100 %> <br>
<%= link_to @book.user.name, user_path(current_user) %></td>

   <td><%= link_to @book.title, book_path(@book.id) %></td>
   <td><%= @book.body %></td>
   <td>
    <% if user_signed_in? && current_user.id == @book.user_id %>
   <li>
     <span class="label label-success">
    <%= link_to "Edit", edit_book_path(@book) %>
    </span>
   </li>
   <td>
   <li>
     <span class="label label-danger">
    <%= link_to "Destroy", book_path(@book.id), method: :delete %>
    </span>
   </li>
   </td>
  <% end %>
   </td>
  </tr>



</table>
  </div>
</div>





